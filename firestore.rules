rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to the 'sensors' collection,
    // but restrict writes. This allows the app to display sensor data
    // while preventing users from modifying it directly.
    match /sensors/{sensorId} {
      allow read: if true;
      allow create, update, delete: if false;
    }
  }
}
